<?xml version="1.0"?>

<!-- For more information on using Web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=301874 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!-- Transform connection strings -->
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Server=your-development-server;Database=your-development-db;User Id=your-username;Password=your-password;" 
         xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>

  <!-- Transform app settings -->
  <appSettings>
    <add key="Environment" value="Development" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>

  <system.web>
    <!-- Replace customErrors section to show detailed error messages during debugging -->
    <customErrors mode="Off" xdt:Transform="Replace" />
    
    <!-- Enable compilation debug mode -->
    <compilation debug="true" xdt:Transform="SetAttributes" />
  </system.web>

  <system.webServer>
    <!-- Configure detailed error logging for development -->
    <httpErrors errorMode="DetailedLocalOnly" defaultResponseMode="File" xdt:Transform="SetAttributes">
      <remove statusCode="500" subStatusCode="-1" xdt:Transform="Remove" />
      <error statusCode="500" prefixLanguageFilePath="" path=".\500.html" responseMode="File" />
    </httpErrors>
  </system.webServer>
</configuration>
